            error: function (errorMsg) {
                //请求失败时执行该函数
                alert("下拉框加载失败!");

            }
        });
    })
    
    var myChart = echarts.init(document.getElementById('main'));

    var myChart1 = echarts.init(document.getElementById('main1'));
    //第一个图方法
    function FirstSearch() {
        myChart.showLoading();
        var starttime = $('#starttime').datebox('getValue');
        var endtime = $('#endtime').datebox('getValue') + " 23:59:59";
        var Qian = $("#QianSelect").find("option:selected").text();
        var Hou = $("#HouSelect").find("option:selected").text();
        var timeindex = $("#TimeSelect").val();
        var name = Qian + "\\" + Hou;
        if (starttime == "")
        {
            $.messager.alert('温馨提示', '请输入开始时间！');
            return false;
        }
        if (endtime == "") {
            $.messager.alert('温馨提示', '请输入结束时间！');
            return false;
        }
        if (Qian == "--请选择--") {
            $.messager.alert('温馨提示', '请选择第一个下拉框！');
            return false;
        }
        if (Hou == "--请选择--") {
            $.messager.alert('温馨提示', '请选择第二个下拉框！');
            return false;
        }

        //上面折线图
        $.ajax({
            type: "post",
            async: true,
            url: "/CollationMap/MainAction",
            dataType: "json",
            data: { starttime: starttime, endtime: endtime, name: name, timeindex: timeindex },
            success: function (result) {
                myChart.hideLoading();
                for (var i = 0; i < result.length; i++) {
                    // 指定图表的配置项和数据
                    var option = {
                        title: {
                            text: name,
                            left: 'center',
                            textStyle: { color: 'red', fontWeight: 'bold' }
                        },
                        tooltip: { trigger: 'axis' },
                        toolbox: {
                            show: true,
                            feature: {
                                dataZoom: {
                                    yAxisIndex: 'none'
                                },
                                dataView: { readOnly: false },
                                magicType: { type: ['line', 'bar'] },
                                restore: {},
                                saveAsImage: {}
                            }
                        },
                        dataZoom: [{
                            type: 'inside',
                            start: 0,
                            end: 10
                        }, {
                            start: 0,
                            end: 10,
                            handleSize: '80%',
                            handleStyle: {
                               
                                shadowBlur: 3,
                                shadowColor: 'rgba(0, 0, 0, 0.6)',
                                shadowOffsetX: 2,
                                shadowOffsetY: 2
                            }
                        }],
                        xAxis: {
                            data: eval(result[0].Times),
                        },
                        yAxis: {
                            min: 'dataMin',
                            max: 'dataMan'
                        },
                        series: [{
                            name:'数据',
                            type: 'line',
                            smooth: true,
                            data: eval(result[0].pvs),
                            label: {
                                normal: {
                                    show: true,
                                    position: 'top'
                                }
                            },
                          
                        }]
                    };

                    // 使用刚指定的配置项和数据显示图表。
                    myChart.setOption(option);
                    window.addEventListener("resize", function () {

                        myChart.resize();

                    });
                   
                }
            },
            error: function (errorMsg) {
                //请求失败时执行该函数
                alert("加载失败！");

            }
        });


    }
